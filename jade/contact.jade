doctype html

html.no-js

  include ./includes/header.jade

  body

    include ./includes/main-menu.jade

    header.masthead
      .row.align-middle
        .small-12.columns
          h1 contact

    section.introduction
      .row.align-center
        .small-10.medium-8.large-6.columns
          h2 Here is the best way to get in touch with me

    section.form
      form
        .row.align-center
          .small-12.medium-4.large-3.columns
            label Your name
              input(type="text")

          .small-12.medium-4.large-3.columns
            label Your email
              input(type="email")

          .small-12.medium-7.columns
            label What can I do for you?
              textarea

      .row.align-center
        .small-12.medium-6.columns
          input(type="submit" value="Send Message").button.hollow.expanded


    secion.social
      .row.align-center
        .small-10.medium-8.large-6.columns
          h2 Prefer Social Media?
          p Here's where to find me!
      .row.align-center
        - var socialItems = [{name: 'Dribbble', link: 'https://dribbble.com/cstalhem', image: 'dribbble.svg'}, {name: 'Behance', link: 'https://www.behance.net/Cstalhemfe74', image: 'behance.svg'}, {name: 'LinkedIn', link: 'https://se.linkedin.com/in/cstalhem', image: 'linkedin.svg'}, {name: 'Facebook', link: 'https://www.facebook.com/cstalhem', image: 'facebook.svg'}]
        each item in socialItems
          .small-6.medium-4.large-3
            a(href="#{item.link}")
              img(src="img/#{item.image}")
              p #{item.name}

  section.email
    .row.align-center
      .small-10.medium-8.large-6.columns
        h2 You can also email me

    .row.align-center
      .small-6.medium-4.large-3.columns
        a(href="mailto:carl@stalhem.se")
          img(src="img/email.svg")
          p carl@stalhem.se

    include ./includes/footer.jade
