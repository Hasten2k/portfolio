mixin masthead(pageTitle)
  section.masthead
    .row.align-middle
      .small-12.columns
        h1= pageTitle

mixin pageIntroduction()
  section.introduction
    .row.align-center
      .small-12.medium-8.large-6.xlarge-5.columns
        h2 It's great to meet you!

mixin portfolioIntroduction(introduction)
  section.introduction
    .row.align-center
      .small-12.medium-8.large-6.xlarge-5.columns
        p= introduction
