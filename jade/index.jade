doctype html
html.no-js

  include ./includes/header.jade

body

  include ./includes/main-menu.jade

  header.masthead
    .row.align-middle
      .small-12.columns
        h1 hi

  section.introduction
    .row.align-center
      .small-12.medium-8.large-6.xlarge-5.columns
        h2 It's great to meet you!

    .row.align-center
      .small-12.medium-6.large-5.columns
        p My name is Carl and I am an ambitious project manager and aspiring front-end designer and programmer.
        p This is my corner of the web where you can see what I've done previously and get in touch with me!

  section.carousel.row.align-middle.align-center
    .orbit(role="region" aria-label="Portfolio Slider" data-orbit data-options="slideClass: slide; animInFromLeft: scale-in-down; nimInFromRight: scale-in-up; animOutFromLeft: scale-in-up; animOutFromRight: scale-out-up;")
      ul.orbit-container
        li.slide.is-active
          .slide-image(data-interchange="[img/portfolio/guestdo/small@2x.png, small], [img/portfolio/guestdo/medium@2x.png, medium], [img/portfolio/guestdo/large@2x.png, large], [img/portfolio/guestdo/large@2x.png, xlarge]")
        li.slide
          .slide-image(data-interchange="[img/portfolio/cine/small@2x.png, small], [img/portfolio/cine/medium@2x.png, medium], [img/portfolio/cine/large@2x.png, large], [img/portfolio/cine/large@2x.png, xlarge]")
        li.slide
          .slide-image(data-interchange="[img/portfolio/imdb/small@2x.png, small], [img/portfolio/imdb/medium@2x.png, medium], [img/portfolio/imdb/large@2x.png, large], [img/portfolio/imdb/large@2x.png, xlarge]")

      //- Carousel navigation
      nav.orbit-bullets
        button.is-acitve(data-slide="0")
          span.show-for-sr First Slide
          span.show-for-sr Current Slide
        button(data-slide="1")
          span.show-for-sr Second Slide
        button(data-slide="2")
          span.show-for-sr Third Slide

  .row
    .small-12.columns
      a(href="portfolio.html").button.hollow.link Check out my full portfolio!
        i.cine-icon.cine-icon-angle-right

  section.tools
    .row
      .small-12.columns
        h2 The tools I use, know and love

    .row.align-center
      //- Build an array of objects with tools and images
      - var tools = [{name: 'Sketch', filename: 'sketch.svg'}, {name: 'Photoshop CS6', filename: 'photoshop.svg'}, {name: 'CodeKit', filename: 'codekit.svg'}, {name: 'Atom.io', filename: 'atom.svg'}, {name: 'Foundation 6', filename: 'foundation.svg'}, {name: 'Bootstrap 4', filename: 'bootstrap.svg'}, {name: 'Jade', filename: 'jade.svg'}, {name: 'HTML 5', filename: 'html5.svg'},  {name: 'SASS', filename: 'sass.svg'}, {name: 'CSS 3', filename: 'css3.svg'}, {name: 'JavaScript', filename: 'js.svg'}]
      //- Iterate over the tools array above
      each val, index in tools 
        div.small-6.medium-4.large-3.columns
          img(src="img/#{val.filename}")
          p #{val.name}

  section.main-page-cv
    .row
      .small-12.columns
        h2 Some of the formal stuff
        p What I have studied and where

    - var cvContent = [{title: 'BSc in Business & Economics', place: 'Stockholm School of Economics', amount: '180 ECTS', image: 'sse.svg'}]
    .row.align-center
      each item in cvContent
        .small-12.medium-8.large-6.columns
          img(src="img/#{item.image}")
          h3 #{item.title}
          h4 #{item.place}
          p #{item.amount}

  include ./includes/footer.jade

